                    <page string="Flight">
                        <notebook>
                            <page string="Flight International" name="flightInt" attrs="{'invisible':[('individual', '=', 'individual')]}">
                                <field name="sale_order_flight_int" attrs="{'readonly':[('state','=','done')]}" nolabel="1" >
